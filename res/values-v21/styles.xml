<?xml version="1.0" encoding="UTF-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="MyMaterialTheme" parent="SuperMaterialTheme">
        <item name="android:colorPrimary">@color/dark_red</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/dark_gray</item>
        <item name="android:colorPrimaryDark">@color/red</item>

        <item name="android:windowBackground">@color/red_orange</item>
        <item name="android:navigationBarColor">@color/orange</item>
        <item name="android:colorControlNormal">@color/red</item>
        <item name="android:colorControlHighlight">@color/red_orange</item>
        <item name="android:colorControlActivated">@color/orange</item>
        <item name="android:elevation">30dp</item>
    </style>

    <style name="MyToolbarTheme2" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:background">@color/dark_red</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="MyPopupTheme" parent="SuperPopupTheme">
        <item name="android:textColorPrimary">@color/green</item>
        <item name="android:textColorSecondary">@color/yellow_green</item>
        <item name="android:background">@color/dark_gray</item>
    </style>






</resources>